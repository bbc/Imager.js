{
  "name": "imager.js",
  "version": "0.1.0",
  "description": "Imager.js is an alternative solution to the issue of how to handle responsive image loading, created by developers at BBC News.",
  "main": "Imager.js",
  "scripts": {
    "test": "jshint Imager.js && npm run test-remote",
    "test-remote": "karma start --single-run --browsers SauceIE8,SauceiOS,SauceAndroid,SauceFirefox,SauceSafari",
    "test-local": "karma start --single-run",
    "test-watch": "karma start",
    "build": "uglifyjs ./Imager.js -o ./dist/Imager.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/BBC-News/Imager.js.git"
  },
  "keywords": [
    "responsive",
    "srcset",
    "images",
    "resize",
    "polyfill",
    "shim",
    "img",
    "PictureFill"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "grunt": "~0.4.1",
    "grunt-responsive-images": "~0.0.7",
    "karma-mocha": "~0.1.0",
    "mocha": "~1.13.0",
    "karma-phantomjs-launcher": "~0.1.0",
    "karma-script-launcher": "~0.1.0",
    "karma-chrome-launcher": "~0.1.0",
    "karma-firefox-launcher": "~0.1.0",
    "karma-html2js-preprocessor": "~0.1.0",
    "karma-jasmine": "~0.1.3",
    "karma-coffee-preprocessor": "~0.1.0",
    "karma": "~0.10.4",
    "jshint": "~2.3.0",
    "components-jquery": "git://github.com/components/jquery.git#1.10.2",
    "karma-sinon": "0.0.1",
    "uglify-js": "~2.4.3",
    "karma-sauce-launcher": "~0.1.8",
    "expect.js": "~0.2.0",
    "karma-expect": "~1.0.0"
  }
}
